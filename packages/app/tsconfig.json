{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "preserve",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "config/*": [
        "./config/*"
      ],
      "types/*": [
        "./types/*"
      ],
      "decorators/*": [
        "./src/decorators/*"
      ],
      "extends/*": [
        "./src/extends/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./dist",
    "**/node_modules"
  ]
}
